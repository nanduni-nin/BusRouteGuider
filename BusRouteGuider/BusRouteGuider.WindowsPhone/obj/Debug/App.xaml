<Application
    x:Class="BusRouteGuider.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BusRouteGuider">

    <Application.Resources>
        <Style x:Key="LayoutGridStyle" TargetType="Grid">
            <Setter Property="Background">
                <Setter.Value>
                    <ImageBrush ImageSource="/Assets/MainPage.png"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LayoutGridStyle2" TargetType="Grid">
            <Setter Property="Background">
                <Setter.Value>
                    <ImageBrush ImageSource="/Assets/Empty.png"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>  
        

</Application>
    
    

