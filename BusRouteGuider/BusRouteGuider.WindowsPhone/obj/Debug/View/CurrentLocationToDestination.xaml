<Page
    x:Class="BusRouteGuider.CurrentLocationToDestination"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BusRouteGuider"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Grid>
        <!--Menu button -->
        <GridView x:ConnectionId='1' x:Name="Menu" Margin="1,6,272,0" Height="66" VerticalAlignment="Top" Background="#141F2E" IsItemClickEnabled="True" Foreground="#FFFBF7F7"                            ToolTipService.ToolTip="Back to Main Page" >
            <TextBlock x:Name="TxtBlckMenu" Text="Menu" Margin="30,3,2,10" Style="{ThemeResource BaseTextBlockStyle}" Foreground="White" FontFamily="Segoe UI Semibold" FontSize="23" Width="66"/>
        </GridView>

        <!--Help button -->
        <GridView x:Name="Help" Margin="272,6,1,0" Height="66" VerticalAlignment="Top" Background="#141F2E" IsItemClickEnabled="True" ToolTipService.ToolTip="Need Help?">
            <TextBlock x:Name="TxtBlckHelp" Text="Help" Style="{ThemeResource BaseTextBlockStyle}" Margin="85,0,0,0" Width="50" Foreground="White" FontFamily="Segoe UI Semibold" FontSize="23"/>
        </GridView>

        <!--Map button -->
        <GridView x:ConnectionId='2' x:Name="Map" Margin="137,6,136,0" Height="66" VerticalAlignment="Top" Background="#FF849EB8" IsItemClickEnabled="True"                           Foreground="#FFFBF7F7" ToolTipService.ToolTip="View the Map" FontFamily="Segoe UI Semibold">
            <TextBlock x:Name="TxtBlckMap" Text="Map" Margin="65,3,2,10" Style="{ThemeResource BaseTextBlockStyle}" Foreground="White" FontFamily="Segoe UI Semibold" FontSize="23" Width="81" />
        </GridView>
        
        <!-- Destination text box -->
        <TextBlock HorizontalAlignment="Left" Margin="62,368,0,0" TextWrapping="Wrap" Text="Destination:" VerticalAlignment="Top" Height="48" FontFamily="Global User Interface" FontSize="23" FontStyle="Italic" />
        <AutoSuggestBox x:ConnectionId='3'  x:Name="textLoc"                                          HorizontalAlignment="Center" Margin="0,428,0,0" VerticalAlignment="Top" Width="322" PlaceholderText="Enter a location" Foreground="#FFF78989">
            <AutoSuggestBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding}" />
                    </StackPanel>
                </DataTemplate>
            </AutoSuggestBox.ItemTemplate>
        </AutoSuggestBox>

        <!-- Search button -->
        <Button x:ConnectionId='4' Content="Search" Background="#141F2E" HorizontalAlignment="Left" Margin="39,560,0,0" VerticalAlignment="Top" Width="142"                     />
        
        <!-- Cancel button -->
        <Button Content="Cancel" Background="#141F2E" HorizontalAlignment="Left" Margin="214,560,0,0" VerticalAlignment="Top" Width="142"/>

        <!-- Details -->
        <TextBlock HorizontalAlignment="Left" Margin="40,272,0,0" TextWrapping="Wrap" Text="Current location will be tracked using GPS. Please turn GPS on." VerticalAlignment="Top" Height="48" FontFamily="Global User Interface" FontSize="23" />
        <TextBlock HorizontalAlignment="Left" Margin="32,127,0,0" TextWrapping="Wrap" Text="Find Routes from Current Location to Destination" VerticalAlignment="Top" Height="108" FontFamily="Cambria" FontSize="30" Width="362" FontWeight="Bold" />

    </Grid>
</Page>

